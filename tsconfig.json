{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strict": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "downlevelIteration": true,
    "outDir": "build/",
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
